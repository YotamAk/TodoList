<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>ToDoTasks</display-name>
  <servlet>
        <display-name>User</display-name>
        <servlet-name>User</servlet-name>
        <servlet-class>com.yai.hibernate.controller.UserControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>newItem</display-name>
        <servlet-name>newItem</servlet-name>
        <servlet-class>com.yai.hibernate.controller.InsertItemServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>removeItem</display-name>
        <servlet-name>removeItem</servlet-name>
        <servlet-class>com.yai.hibernate.controller.RemoveItemServlet</servlet-class>
    </servlet>
    <servlet>
        <display-name>ToDo</display-name>
        <servlet-name>todo</servlet-name>
        <jsp-file>/todo.jsp</jsp-file>
    </servlet>
        <servlet>
        <display-name>Register</display-name>
        <servlet-name>Register</servlet-name>
        <jsp-file>/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newItem</servlet-name>
        <url-pattern>/InsertItemServlet</url-pattern>
    </servlet-mapping>
        <servlet-mapping>
        <servlet-name>removeItem</servlet-name>
        <url-pattern>/RemoveItemServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>todo</servlet-name>
        <url-pattern>/todo</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
	<!-- change to index.jsp -->
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>